mixin header()
    header.header
        nav.header__nav.container 
            a(href="index.html").header__logo
                img(src="@img/logo.svg", alt="" draggable="false" loading="lazy")
                | Grow#[span Be]
            .header__content 
                ul.header__list 
                    li.header__li 
                        a(href="#!").header__link.active Home
                    li.header__li
                        a(href="#!").header__link About Us
                    li.header__li
                        a(href="#!").header__link Services 
                    .dropdown
                        button(type="button").dropbtn Features 
                            <svg width="8" height="5" viewBox="0 0 8 5" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M1 1L4 4L7 1" stroke="" stroke-linecap="round" stroke-linejoin="round"/>
                            </svg> 
                        .dropdown-content#myDropdown 
                            a(href="#!") Digital marketing 
                            a(href="#!") Seo optimization 
                            a(href="#!") Web development
                    li.header__li
                        a(href="#!").header__link Team
                    li.header__li
                        a(href="#!").header__link Blog
                    li.header__li
                        a(href="#!").header__link Contact
                a(href="#!").header__btn.btn Get Started 